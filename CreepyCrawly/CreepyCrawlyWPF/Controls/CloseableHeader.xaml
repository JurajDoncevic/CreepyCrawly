<UserControl x:Class="CreepyCrawlyWPF.Controls.CloseableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CreepyCrawlyWPF.Controls"
             mc:Ignorable="d" 
             Height="Auto" d:DesignWidth="120">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbl_tabTitle" Content="Tab name" Grid.Column="0" Padding="0,2.5,0,0"/>
        <Image x:Name="btn_close" Grid.Column="1" Width="10" Height="10" Source="/Images/Close.png"/>
    </Grid>
</UserControl>
